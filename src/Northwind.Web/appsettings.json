{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Products": {
    "DefaultPageSize": 10
  },
  "Categories": {
    "ImageSizeLimitBytes": 28000000,
    "AllowedImageType": "bmp"
  },
  "ActionLogging": {
    "AddArguments": true
  },
  "ImageCaching": {
    "StoreLocation": "C:\\Northwind\\Cache\\Images",
    "MaxCacheItems": 3,
    "CacheExpirationMin": 2,
    "AllowedImageTypes": [
      "bmp",
      "jpeg"
    ]
  },
  "ConnectionStrings": {
    "Northwind": "Data Source=localhost;Initial Catalog=Northwind;Integrated Security=True"
  }
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "",
    "ClientId": "",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-oidc"
  },
  "AllowedHosts": "*",
  "Products": {
    "DefaultPageSize": 10
  },
  "Categories": {
    "ImageSizeLimitBytes": 28000000,
    "AllowedImageType": "bmp"
  },
  "ActionLogging": {
    "AddArguments": true
  },
  "ImageCaching": {
    "StoreLocation": "C:\\Northwind\\Cache\\Images",
    "MaxCacheItems": 3,
    "CacheExpirationMin": 2,
    "AllowedImageTypes": [
      "bmp",
      "jpeg"
    ]
  },
  "SendGrid": {
    "User": "",
    "SenderMail": "",
    "ApiKey": ""
  },
  "ConnectionStrings": {
    "Northwind": "Data Source=localhost;Initial Catalog=Northwind;Integrated Security=True",
    "Northwind.Identity": "Data Source=localhost;Database=Northwind.Identity;Integrated Security=True;MultipleActiveResultSets=true"
  }
}